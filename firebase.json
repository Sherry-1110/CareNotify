{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/generate-message",
        "function": "generateMessage"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
